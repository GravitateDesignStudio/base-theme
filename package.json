{
  "name": "base-theme",
  "version": "3.2.0",
  "description": "Base Theme",
  "scripts": {
    "build": "wpackio-scripts build",
    "bootstrap": "wpackio-scripts bootstrap",
    "start": "wpackio-scripts start",
    "archive": "wpackio-scripts pack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GravitateDesignStudio/base-theme.git"
  },
  "author": "Gravitate Design Studio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GravitateDesignStudio/base-theme/issues"
  },
  "homepage": "https://github.com/GravitateDesignStudio/base-theme#readme",
  "dependencies": {
    "@babel/runtime": "^7.10.1",
    "@wpackio/entrypoint": "^6.4.0",
    "foundation-sites": "^6.6.3",
    "intersection-observer": "^0.12.0",
    "normalize.css": "^8.0.0",
    "sass": "^1.62.1"
  },
  "devDependencies": {
    "@wpackio/scripts": "^6.4.0",
    "postcss": "^8.4.23"
  },
  "bundlerOptions": {
    "babel": true
